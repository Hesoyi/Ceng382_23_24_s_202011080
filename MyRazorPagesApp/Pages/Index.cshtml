@page
@model MyRazorPagesApp.Pages.IndexModel

<h2>Rooms List</h2>

<a asp-page="./Create" class="btn btn-primary">Create New Room</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Capacity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model.Rooms)
        {
            <tr>
                <td>@room.RoomName</td>
                <td>@room.Capacity</td>
                <td>
                    <!-- Edit and Delete buttons can be added here later -->
                </td>
            </tr>
        }
    </tbody>
</table>
